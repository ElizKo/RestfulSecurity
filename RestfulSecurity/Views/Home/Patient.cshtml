@{
    ViewBag.Title = "Patient Records";
}

<div class="form-group">
    <div class="pull-right">
        <span>Hello, <em><label data-bind="text: user" /></em></span>
        <button data-bind="click: logout" class="btn btn-primary">Log Out</button>
    </div>
</div>

<div class="form-group">
    <button id="searchBtn" type="button" class="btn btn-primary btn-m">Search</button>
    <input type="search" id="searchPatient" name="searchPatient" placeholder="Enter keyword" />
</div>

<legend>Patients Available</legend>
<div class="scroll-table">
    <table id="patientTable" class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th># Embryos</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="patientTableBody" />
    </table>
</div>
<br/>

<legend>Embryo Images <span id="selectedPatientLabel"></span></legend>

<div class="scroll-table">
    <table id="imageTable" class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Image File</th>
            </tr>
        </thead>
        <tbody id="imageTableBody" />
    </table>
</div>

<div id="imageContainer"></div>
<br />

<form id="editForm">
    <fieldset>
        <legend>Create or update a patient</legend>
        <div class="row">
            <div class="form-group col-xs-4">
                <label for="title">Title:</label>
                <input type="text" class="form-control" id="title" placeholder="Enter title" />
            </div>
            <div class="form-group col-xs-4">
                <label for="firstName">First Name:</label>
                <input type="text" class="form-control" id="firstName" placeholder="Enter first name" />
            </div>
            <div class="form-group col-xs-4">
                <label for="lastName">Last Name:</label>
                <input type="text" class="form-control" id="lastName" placeholder="Enter last name" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-xs-4">
                <label for="age">Age:</label>
                <input type="text" class="form-control" id="age" placeholder="Enter age" />
            </div>
            <div class="form-group col-xs-4">
                <label for="numberOfEmbryos">Number of Embryos:</label>
                <input type="text" class="form-control" id="numberOfEmbryos" placeholder="Enter number of embryos" />
            </div>
            <div class="form-group col-xs-4">
                <br />
                <button id="addBtn" type="button" class="btn btn-primary">Add a New Patient</button>
                <button id="updateBtn" type="button" class="btn btn-warning">Update Patient</button>
                <button id="cancelBtn" type="button" class="btn btn-danger">Cancel</button>
            </div>
            <input type="hidden" id="patientIdHidden" />
            <a href="#" class="back-to-top">Back to Top<span></span></a>
        </div>
    </fieldset>
</form>
<br />

<div id="dialog-confirm-delete" title="Delete patient?">
    <p><span class="ui-icon ui-icon-alert"></span>Are you sure you want to delete this patient?</p>
</div>